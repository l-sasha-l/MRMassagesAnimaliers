---
import ContactForm from "../ui/ContactForm.astro";

interface ContactDetail {
    label: string;
    info: string[];
    icon: string;
}

interface ContactDetail {
    label: string;
    info: string[];
    icon: string;
    link?: string;
}

const contactDetails: ContactDetail[] = [
    {
        label: "Téléphone",
        info: ["06.87.93.34.16"],
        icon: "/icones/phone-solid.svg",
        link: "tel:0687933416",
    },
    {
        label: "Email",
        info: ["mr_massages.animaliers@yahoo.com"],
        icon: "/icones/envelope-open-text-solid.svg",
        link: "mailto:mr_massages.animaliers@yahoo.com",
    },
    {
        label: "Instagram",
        info: ["@mr_massages.animaliers"],
        icon: "/icones/instagram.svg",
        link: "https://instagram.com/mr_massages.animaliers",
    },
];
---

<section id="contact" class="contact">
    <div class="section-header">
        <span class="section-label">Contactez-nous</span>
        <h2>Contact</h2>
        <div class="divider"></div>
    </div>
    <div class="contact-container">
        <div class="contact-info">
            <h3>Informations de Contact</h3>
            <p class="contact-intro">
                N'hésitez pas à me contacter pour toute question ou pour prendre
                rendez-vous.
            </p>
            <div class="contact-details">
                {
                    contactDetails.map((detail) => (
                        <a
                            href={detail.link}
                            class="contact-detail"
                            target={
                                detail.link?.startsWith("http")
                                    ? "_blank"
                                    : undefined
                            }
                            rel={
                                detail.link?.startsWith("http")
                                    ? "noopener noreferrer"
                                    : undefined
                            }
                        >
                            <div class="detail-icon">
                                <img
                                    src={detail.icon}
                                    alt={detail.label}
                                    class="icon-svg"
                                />
                            </div>
                            <div class="detail-content">
                                <strong>{detail.label}</strong>
                                {detail.info.map((line) => (
                                    <p>{line}</p>
                                ))}
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
        <ContactForm />
    </div>
</section>

<style>
    .contact {
        background: linear-gradient(
            180deg,
            var(--secondary-color) 0%,
            #faf8f2 100%
        );
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-label {
        display: inline-block;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--accent-color);
        font-weight: 500;
        margin-bottom: 0.75rem;
    }

    .section-header h2 {
        margin-bottom: 1rem;
    }

    .divider {
        width: 60px;
        height: 3px;
        background: var(--primary-color);
        margin: 0 auto;
    }

    .contact-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        margin-top: 3rem;
    }

    .contact-info {
        background: white;
        padding: 3rem;
        border-radius: 4px;
        border: 1px solid var(--border-color);
        height: fit-content;
    }

    .contact-info h3 {
        margin-bottom: 1rem;
    }

    .contact-intro {
        color: var(--text-medium);
        margin-bottom: 2.5rem;
        line-height: 1.7;
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .contact-detail {
        display: flex;
        gap: 1.25rem;
        text-decoration: none;
        padding: 1rem;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .contact-detail:hover {
        background: var(--border-color);
        transform: translateX(5px);
    }

    .detail-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(
            135deg,
            var(--primary-color) 0%,
            var(--primary-light) 100%
        );
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-svg {
        width: 24px;
        height: 24px;
        filter: brightness(0) invert(1);
    }

    .detail-content strong {
        color: var(--primary-color);
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .detail-content p {
        margin: 0.25rem 0;
        color: var(--text-medium);
        font-size: 0.95rem;
        word-break: break-word;
    }

    @media (max-width: 768px) {
        .contact-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .contact-info {
            padding: 2rem;
        }
    }

    @media (max-width: 480px) {
        .contact {
            padding: 4rem 0.75rem;
        }

        .contact-container {
            gap: 1.5rem;
            padding: 0;
        }

        .contact-info {
            padding: 1.5rem;
        }

        .contact-info,
        .contact-form {
            max-width: 100%;
            overflow: hidden;
        }

        .detail-content p {
            font-size: 0.85rem;
        }

        .contact-detail {
            padding: 0.75rem;
        }
    }
</style>
