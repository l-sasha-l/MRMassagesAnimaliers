---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer-content">
        <img
            src="/logo-clair.png"
            alt="MR Massages Animaliers"
            class="footer-logo"
        />
        <div class="footer-links">
            <a href="#" data-open-legal>Mentions Légales</a>
            <span class="separator">•</span>
            <a href="#contact">Contact</a>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; {currentYear} MR Massages Animalier. Tous droits réservés.</p>
    </div>
</footer>

<style>
    .footer {
        background: var(--primary-dark);
        color: var(--secondary-color);
        padding: 1.5rem 2rem 1rem;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 252, 244, 0.1);
    }

    .footer-logo {
        height: 45px;
        width: auto;
        object-fit: contain;
        filter: brightness(0) invert(1);
        opacity: 0.95;
    }

    .footer-links {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .separator {
        color: rgba(255, 252, 244, 0.4);
        font-size: 0.8rem;
    }

    .footer-links a {
        color: rgba(255, 252, 244, 0.8);
        font-size: 0.85rem;
        transition: all 0.3s ease;
        position: relative;
    }

    .footer-links a::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--secondary-color);
        transition: width 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--secondary-color);
    }

    .footer-links a:hover::after {
        width: 100%;
    }

    .footer-bottom {
        max-width: 1400px;
        margin: 0 auto;
        text-align: center;
        padding-top: 1rem;
    }

    .footer-bottom p {
        color: rgba(255, 252, 244, 0.6);
        font-size: 0.75rem;
        margin: 0;
    }

    @media (max-width: 768px) {
        .footer {
            padding: 1.25rem 1rem 0.75rem;
        }

        .footer-content {
            flex-direction: column;
            gap: 1rem;
            padding-bottom: 0.75rem;
        }

        .footer-logo {
            height: 35px;
        }

        .footer-links {
            flex-direction: column;
            gap: 0.5rem;
        }

        .separator {
            display: none;
        }

        .footer-bottom {
            padding-top: 0.75rem;
        }
    }
</style>
