---
interface PriceItem {
    service: string;
    price: string;
}

interface Props {
    title: string;
    items: PriceItem[];
    featured?: boolean;
}

const { title, items, featured = false } = Astro.props;
---

<div class:list={["pricing-card", { featured }]}>
    {featured && <span class="featured-badge">Populaire</span>}
    <h3>{title}</h3>
    <div class="price-list">
        {
            items.map((item, index) => (
                <div
                    class:list={[
                        "price-item",
                        { highlight: index === items.length - 1 },
                    ]}
                >
                    <span class="service">{item.service}</span>
                    <span class="price">{item.price}</span>
                </div>
            ))
        }
    </div>
</div>

<style>
    .pricing-card {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 4px;
        border: 1px solid var(--border-color);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .pricing-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(
            90deg,
            var(--primary-color) 0%,
            var(--accent-color) 100%
        );
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .pricing-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
        border-color: transparent;
    }

    .pricing-card:hover::before {
        transform: scaleX(1);
    }

    .featured {
        border-color: var(--primary-color);
        box-shadow: var(--shadow-md);
    }

    /* Barre toujours visible sur featured (pas de transition) */
    .featured::before {
        transform: scaleX(1) !important;
        transition: none !important;
    }

    .featured-badge {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: var(--accent-color);
        color: white;
        padding: 0.375rem 1rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .pricing-card h3 {
        text-align: center;
        font-size: 1.75rem;
        margin-bottom: 2.5rem;
        color: var(--primary-color);
    }

    .price-list {
        display: flex;
        flex-direction: column;
        gap: 1.75rem;
        flex: 1;
    }

    .price-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1.25rem;
        border-bottom: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    .price-item:last-child {
        border-bottom: none;
    }

    .price-item.highlight {
        background: linear-gradient(
            90deg,
            rgba(120, 84, 68, 0.03) 0%,
            transparent 100%
        );
        padding: 1rem;
        margin: 0 -1rem;
        border-radius: 4px;
    }

    .service {
        color: var(--text-dark);
        font-size: 0.95rem;
        flex: 1;
        padding-right: 1rem;
    }

    .price {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--primary-color);
        font-family: "Playfair Display", serif;
        white-space: nowrap;
    }

    .highlight .price {
        font-size: 1.75rem;
    }

    /* Mobile optimizations */
    @media (max-width: 768px) {
        .pricing-card {
            padding: 2rem 1.5rem;
        }

        .pricing-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1.75rem;
        }

        .price-list {
            gap: 1.25rem;
        }

        .price-item {
            padding-bottom: 1rem;
        }

        .service {
            font-size: 0.875rem;
            line-height: 1.4;
        }

        .price {
            font-size: 1.25rem;
        }

        .highlight .price {
            font-size: 1.4rem;
        }

        .featured-badge {
            top: 1rem;
            right: 1rem;
            padding: 0.25rem 0.75rem;
            font-size: 0.7rem;
        }

        .price-item.highlight {
            padding: 0.75rem;
            margin: 0 -0.75rem;
        }
    }

    @media (max-width: 480px) {
        .pricing-card {
            padding: 1.5rem 1.25rem;
        }

        .pricing-card h3 {
            font-size: 1.35rem;
            margin-bottom: 1.5rem;
        }

        .price-list {
            gap: 1rem;
        }

        .price-item {
            padding-bottom: 0.875rem;
        }

        .service {
            font-size: 0.85rem;
        }

        .price {
            font-size: 1.15rem;
        }

        .highlight .price {
            font-size: 1.3rem;
        }
    }
</style>
